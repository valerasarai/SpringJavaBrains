<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <bean id="triangle" class="com.valerastudy.springJB.ex10.Triangle">
        <property name="pointA" ref="pointA"/>
        <property name="pointB" ref="pointB"/>
        <property name="pointC" ref="pointC"/>
    </bean>
    <bean id="pointA" class="com.valerastudy.springJB.ex10.Point">
        <property name="x" value="${pointA.pointX}"/>
        <property name="y" value="${pointA.pointY}"/>
    </bean>
    <bean id="pointB" class="com.valerastudy.springJB.ex10.Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>
    <bean id="pointC" class="com.valerastudy.springJB.ex10.Point">
        <property name="x" value="0"/>
        <property name="y" value="20"/>
    </bean>
    <bean class="com.valerastudy.springJB.ex10.MyBeanFactoryPostProcessor"/>
    <bean class="org.springframework.beans.factory.config.PreferencesPlaceholderConfigurer">
        <property name="locations" value="springJB/ex10/propertiesFile.config"/>
    </bean>
</beans>
