<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <bean id="parent_triangle" class="com.valerastudy.springJB.ex08.Triangle">
        <property name="pointA" ref="pointA"/>
    </bean>
    <bean id="triangle1" class="com.valerastudy.springJB.ex08.Triangle" parent="parent_triangle">
        <property name="pointB" ref="pointB"/>
        <property name="pointC" ref="pointC"/>
    </bean>
    <bean id="triangle2" class="com.valerastudy.springJB.ex08.Triangle" parent="parent_triangle">
        <property name="pointB" ref="pointB"/>
    </bean>
    <bean id="pointA" class="com.valerastudy.springJB.ex08.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>
    <bean id="pointB" class="com.valerastudy.springJB.ex08.Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>
    <bean id="pointC" class="com.valerastudy.springJB.ex08.Point">
        <property name="x" value="0"/>
        <property name="y" value="20"/>
    </bean>
</beans>
